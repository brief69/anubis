{
    "name": "Anubis IDE",
    "short_name": "Anubis",
    "description": "Web対応のモダンなIDE",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#1e1e1e",
    "theme_color": "#1e1e1e",
    "icons": [
        {
            "src": "media/anubis-icon-192.png",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "media/anubis-icon-512.png",
            "sizes": "512x512",
            "type": "image/png"
        }
    ],
    "file_handlers": [
        {
            "action": "/",
            "accept": {
                "text/*": [".txt", ".js", ".ts", ".json", ".md", ".py"]
            }
        }
    ]
}